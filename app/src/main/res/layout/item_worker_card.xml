<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@android:color/white"
    android:padding="16dp"
    android:elevation="4dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        >

        <TextView
            android:id="@+id/HRA_TXT_workerCard_personalName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Personal Name: Fofo"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/HRA_TXT_workerCard_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Category: GARDNER"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/HRA_TXT_workerCard_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rating: 4.5/5"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/HRA_TXT_workerCard_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Distance: 100m"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:layout_marginTop="4dp" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/HRA_BTN_workerCard_hire"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@+id/HRA_BTN_workerCard_favorite"
                android:text="@string/hire"
                android:textColor="@color/white"
                android:background="@drawable/rounded_accept_button"
                android:layout_marginEnd="8dp"/>

            <ImageButton
                android:id="@+id/HRA_BTN_workerCard_favorite"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_heart"
                android:scaleType="centerCrop"
                android:clickable="true"
                android:contentDescription="@string/edit_personal_name" />


        </RelativeLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
