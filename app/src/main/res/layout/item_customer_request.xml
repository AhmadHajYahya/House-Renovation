<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@android:color/white"
    android:padding="16dp"
    android:elevation="4dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        >

        <TextView
            android:id="@+id/HRA_TXT_request_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title: Garden"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/HRA_TXT_request_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description: Cut grass"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/HRA_TXT_request_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Category: GARDNER"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/HRA_TXT_request_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date: 8/8/2024"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:layout_marginTop="4dp" />


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/HRA_BTN_request_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="@string/cancel"
                android:textColor="@color/white"
                android:background="@drawable/rounded_cancel_button"/>


        </RelativeLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
